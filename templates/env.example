# WordPress React Theme Environment Variables
# Copy this file to .env and modify as needed

# WordPress Detection
REACT_APP_IS_WORDPRESS=true

# WordPress Site URL (auto-detected)
REACT_APP_WP_SITE_URL=

# WordPress Theme Directory (auto-detected)
REACT_APP_WP_THEME_DIR=

# Development Mode
REACT_APP_DEV_MODE=false

# API Base URL (for future WordPress REST API integration)
REACT_APP_API_BASE_URL=/wp-json/wp/v2

# Theme Name
REACT_APP_THEME_NAME=WP React Starter Theme

# Build Configuration
GENERATE_SOURCEMAP=false
